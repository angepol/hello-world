<%= form_for @step do |f| %>

<div class="form-group"
<%= f.label :location %>
<%= f.text_field :location, :required => true, :class =>'form-control' %>
</div>

 <div class="mb-6">
<%= f.label :story %>
<%= f.text_area :story, :class => 'form-control' %>
</div>
