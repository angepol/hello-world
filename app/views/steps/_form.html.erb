<%= form_for @step do |f| %>
<%= f.label :location %>
<%= f.text_field :location, :required => true %>

<%= f.label :story %>
<%= f.text_area :story, maxlength: 1000, size: 30 %>

<%= f.label :date, 'Date' %>
<%= f.date_field :date, :placeholder => 'YYYY-MM-DD' %>

<%= f.label :image %>
<%= f.url_field :image %>

  <%= f.label :journey_id %>
  <%= f.select :journey_id, Journey.pluck(:name, :id), :include_blank => true %>

<%= f.submit %>
<% end %>
